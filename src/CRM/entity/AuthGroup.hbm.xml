<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<!-- 1 配置类和表对应 class标签 name属性：实体类全路径 table属性：数据库表名称 -->
	<class table="t_auth_group" name="CRM.entity.AuthGroup" lazy="false">
		<id name="id" column="id">
			<generator class="native"/>
		</id>
		<property name="title" column="title"></property>
		<property name="auths" column="auths"></property>
		<property name="create_time" column="create_time" type="timestamp"></property>
	</class>
</hibernate-mapping>
